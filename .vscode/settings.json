{
    "github.copilot.enable": {
      "*": false
    },
    "python.testing.pytestArgs": ["-v", "--log-cli-level=INFO"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "/workspaces/shopkeeper/pulumi-shopkeeper",
    "python.defaultInterpreterPath": "/workspaces/shopkeeper/pulumi-shopkeeper/.venv/bin/python",
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.languageServerMode": "light",
    "python.analysis.exclude": ["**/site-packages/**", "**/distutils/**", "**/node_modules/**", "**/__pycache__/**"],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.organizeImports": "explicit",
        },
      },
      // ruff settings and intro docs
      // https://marketplace.visualstudio.com/items?itemName=charliermarsh.ruff
      "ruff.nativeServer": "auto",
      "ruff.configurationPreference": "filesystemFirst",
  }